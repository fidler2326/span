<!DOCTYPE html>
<html>
<head>
  <title>Span</title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="wrapper">
    <% if user_signed_in? %>
      <nav class="navbar navbar-light bg-faded">
        <div class="container">
          <a class="navbar-brand logo" href="/">
            <div class="icon-time"><span></span></div>
            Span
          </a>
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <%= link_to '<i class="fa fa-tachometer" aria-hidden="true"></i> Dashboard'.html_safe, root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fa fa-terminal" aria-hidden="true"></i> Projects'.html_safe, projects_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fa fa-briefcase" aria-hidden="true"></i> Clients'.html_safe, clients_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <a href="" class="nav-link"><i class="fa fa-pie-chart" aria-hidden="true"></i> Reporting</a>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to('<i class="fa fa-sign-out" aria-hidden="true"></i> Logout'.html_safe, destroy_user_session_path, :method => :delete, class: 'nav-link') %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    <% end %>

    <div class="main container">
      <%= render partial: "layouts/flash_messages", flash: flash %>

      <%= yield %>
    </div>

    <footer></footer>
  </div>

</body>
</html>
