<%= simple_form_for @project do |f| %>

  <%= f.error_notification %>

  <div class="grid">
    <div class="unit unit50 left">
      <%= f.input :name, class: 'form-control' %>
      <%= f.input :client_id, as: :select, collection: @clients %>
      <div class="form-group">
        <label>Rate:</label>
        <div class="input-group">
          <div class="input-group-addon">Â£</div>
          <%= f.text_field :project_rate, class: 'form-control' %>
          <div class="input-group-addon">Per hour</div>
        </div>
      </div>

      <div class="form-group">
        <label>Budget:</label>
        <div class="input-group">
          <%= f.text_field :budget, class: 'form-control' %>
          <div class="input-group-addon">Hours</div>
        </div>
      </div>
      <%= f.input :end_date %>
      <%= f.input :complete, label: 'Project Complete?' %>
    </div>

    <div class="unit unit50 right">
      <div id="tasks">
        <%= f.simple_fields_for :tasks do |task| %>
          <%= render 'task_fields', f: task %>
        <% end %>
      </div>
      <div class="links">
        <%= link_to_add_association 'Add Task', f, :tasks, class: 'btn btn-info btn-sm' %>
      </div>
    </div>

    <div class="unit100">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
