<%= simple_form_for @project do |f| %>
  <%= f.input :name, class: 'form-control' %>
  <%= f.input :client_id, as: :select, collection: @clients %>
  <div class="form-group">
    <label>Rate:</label>
    <div class="input-group">
      <div class="input-group-addon">Â£</div>
      <%= f.text_field :project_rate, class: 'form-control' %>
      <div class="input-group-addon">Per hour</div>
    </div>
  </div>

  <div class="form-group">
    <label>Budget:</label>
    <div class="input-group">
      <%= f.text_field :budget, class: 'form-control' %>
      <div class="input-group-addon">Hours</div>
    </div>
  </div>
  <%= f.input :end_date %>
  <%= f.input :complete, label: 'Project Complete?' %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
